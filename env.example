# Supabase Configuration (Optional)
# Set the bucket name for storing images
# Default: gastronomi (if not set)
# The system will automatically create the bucket if it doesn't exist
SUPABASE_BUCKET_NAME=gastronomi

# Required Supabase environment variables
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Site URL for redirects (use your Vercel domain)
NEXT_PUBLIC_SITE_URL=https://your-app.vercel.app